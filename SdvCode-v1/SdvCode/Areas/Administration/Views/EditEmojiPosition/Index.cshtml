@{
    ViewData["Title"] = "Edit Emoji Position";
}

<partial name="_TempDataPartial" />

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Emojis Addons - Edit emoji position</h1>
    </div>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">Edit emoji position - please select the emojis type and edit there positions</h1>
    </div>

    <div class="row">
        <div class="col-xl-12 col-md-12 mb-4">
            <select class="form-control" onchange="emojiTypeSelect(this)" asp-items="Html.GetEnumSelectList<EmojiType>()">
                <option value="" disabled selected>Select emojis type...</option>
            </select>
        </div>
    </div>
    <hr />
    <div id="allEmojis">
        @*Here go all Emojis*@
    </div>
    <div class="row" id="contentForm" style="display: none">
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <button asp-area="Administration" asp-controller="EditEmoji" asp-action="EditEmoji" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-edit"></i>
                    </span>
                    <span class="text">Edit Positions</span>
                </button>
            </div>
        </div>
    </div>
    <hr />
    <input type="hidden" />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/administration/js/editEmojiPosition.js"></script>
}