@{
    ViewData["Title"] = "Sticker addons";
}

@model DeleteChatStickerTypeBaseModel

<partial name="_TempDataPartial" />

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sticker Type Addons - Delete existing sticker type</h1>
    </div>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">Delete existing sticker type</h1>
    </div>
    <form method="post">
        <div class="row">
            <div class="col-xl-12 col-md-12 mb-4">
                <label asp-for="@this.Model.DeleteChatStickerTypeInputModel.Id"></label>
                <select id="stickersOptions" onchange="selectedName(this)" class="form-control" asp-for="@this.Model.DeleteChatStickerTypeInputModel.Id">
                    <option disabled selected>Select sticker type name...</option>
                    @foreach (var stickerType in this.Model.DeleteChatStickerTypeViewModel)
                    {
                        <option value="@stickerType.Id">@stickerType.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="@this.Model.DeleteChatStickerTypeInputModel.Id"></span>
            </div>
        </div>
        <div class="row" id="stickersSection" style="display: none">
            <div class="col-xl-12 col-md-12 mb-4" id="stickersDiv">
            </div>
        </div>
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <button asp-area="Administration" asp-controller="DeleteChatStickerType" asp-action="DeleteChatStickerType" class="btn btn-danger btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-trash-alt"></i>
                    </span>
                    <span class="text">Delete Sticker Type</span>
                </button>
            </div>
        </div>
    </form>
    <hr />
</div>
<input type="hidden" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/administration/js/deleteStickerTypeScript.js"></script>
}