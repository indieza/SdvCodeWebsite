@{
    ViewData["Title"] = "Sticker addons";
}

@model List<AllChatStickersViewModel>

<link href="~/administration/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

<partial name="_TempDataPartial" />

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Stickers Information</h1>
    </div>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">All Stickers</h1>
    </div>

    @foreach (var stickerType in this.Model)
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Information For Each Sticker - Type "@stickerType.Name"</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Position</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Sticker Type</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Position</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Sticker Type</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var sticker in stickerType.AllStickerst)
                            {
                                <tr onmouseover="markTableRow()">
                                    <td>
                                        @sticker.Position
                                    </td>
                                    <td>
                                        <span>
                                            <img style="width: 2.4em;" src="@sticker.Url" />
                                        </span>
                                    </td>
                                    <td>
                                        @sticker.Name
                                    </td>
                                    <td>
                                        @stickerType.Name
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script src="~/administration/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/administration/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/administration/js/demo/datatables-demo.js"></script>
    <script src="~/administration/js/dataTableScripts.js"></script>
}