@{
    ViewData["Title"] = "DbUsage";
}

@model DeleteUsersImagesViewModel

<partial name="_TempDataPartial" />

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">DB Usage - Delete users images</h1>
    </div>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">Delete user profile and cover images</h1>
    </div>
    <form method="post">
        <div class="row">
            <div class="col-xl-6 col-md-9 mb-4">
                <div class="card border-left-info shadow h-100 py-4">
                    <input asp-for="@Model.DeleteUserImages.Username" class="chosen-value addUserValueForUserInRole" type="text" value="" placeholder="Type to filter" autocomplete="off" />
                    <ul class="value-list usersListForUserInRole">
                        @foreach (var username in Model.Usernames)
                        {
                            <li id="userForUserInRole">@username</li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <button asp-area="Administration" asp-controller="DbUsage" asp-action="DeleteUserImages" class="btn btn-danger btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-trash-alt"></i>
                    </span>
                    <span class="text">Delete user images</span>
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6 col-md-9 mb-4">
                <span asp-validation-for="@Model.DeleteUserImages.Username" class="text-danger"></span>
            </div>
        </div>
    </form>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">Delete all users images</h1>
    </div>
    <form method="post">
        <button asp-area="Administration" asp-controller="DbUsage" asp-action="DeleteAllusersImages" class="btn btn-danger btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-trash-alt"></i>
            </span>
            <span class="text">Delete all images</span>
        </button>
    </form>
    <hr />
</div>
@section Scripts {
    <script src="~/administration/js/addUserInRoleUsersDropDown.js"></script>
    <partial name="_ValidationScriptsPartial" />
}