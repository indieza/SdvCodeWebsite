@{
    ViewData["Title"] = "DbUsage";
}

@model DeleteActivitiesByNameInputModel

<partial name="_TempDataPartial" />

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">DB Usage - Delete users activities</h1>
    </div>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">Delete Activities By Name</h1>
    </div>
    <form method="post">
        <div class="row">
            <div class="col-xl-6 col-md-9 mb-4">
                <div class="card border-left-danger shadow h-100 py-4">
                    <input asp-for="@Model.ActivityName" class="chosen-value clearUserActionValue" type="text" value="" placeholder="Type to filter" autocomplete="off" required />
                    <ul class="value-list clearActionsList">
                        @foreach (var action in @Html.GetEnumSelectList<UserActionType>())
                        {
                            <li id="addActions">@action.Text</li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-xl-4 col-md-6 mb-4">
                <button asp-area="Administration" asp-controller="DbUsage" asp-action="DeleteActivityByName" class="btn btn-danger btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-trash-alt"></i>
                    </span>
                    <span class="text">Delete Activities</span>
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6 col-md-9 mb-4">
                <span asp-validation-for="@Model.ActivityName" class="text-danger"></span>
            </div>
        </div>
    </form>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">Delete All Activities</h1>
    </div>
    <form method="post">
        <button asp-area="Administration" asp-controller="DbUsage" asp-action="DeleteAllActivities" class="btn btn-danger btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-trash-alt"></i>
            </span>
            <span class="text">Delete All Activities</span>
        </button>
    </form>
    <hr />
</div>
@section Scripts {
    <script src="~/administration/js/clearUserActionsDropDown.js"></script>
    <partial name="_ValidationScriptsPartial" />
}