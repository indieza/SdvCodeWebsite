@{
    ViewData["Title"] = "Sticker addons";
}

@model AddChatStickersBaseModel

<partial name="_TempDataPartial" />

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sticker Addons - Add new stickers</h1>
    </div>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">Add new stickers</h1>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="row" method="post" enctype="multipart/form-data">
            <div class="col-xl-12 col-md-12 mb-4">
                <label asp-for="@this.Model.AddChatStickersInputModel.StickerTypeId"></label>
                <select class="form-control" asp-for="@this.Model.AddChatStickersInputModel.StickerTypeId">
                    <option disabled selected>Select sticker type...</option>
                    @foreach (var stickerType in this.Model.AddChatStickersViewModels)
                    {
                        <option value="@stickerType.Id">@stickerType.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="@this.Model.AddChatStickersInputModel.StickerTypeId"></span>
            </div>
            <div class="col-xl-12 col-md-12 mb-4">
                <label asp-for="@this.Model.AddChatStickersInputModel.Images"></label>
                <input class="form-control-file" asp-for="@this.Model.AddChatStickersInputModel.Images" type="file" multiple />
                <span class="text-danger" asp-validation-for="@this.Model.AddChatStickersInputModel.Images"></span>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <button asp-area="Administration" asp-controller="AddChatStickers" asp-action="AddChatStickers" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text">Add Stickers</span>
                </button>
            </div>
        </div>
    </form>
    <hr />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}