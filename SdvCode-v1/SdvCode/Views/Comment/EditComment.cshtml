@{
    ViewData["Title"] = "Edit Comment";
}

@model EditCommentInputModel

<div id="banner-area">
    <img src="~/images/banner/banner2.jpg" alt="" />
    <div class="parallax-overlay"></div>
    <div class="banner-title-content">
        <div class="text-center">
            <h2>Edit Post Comment</h2>
            <ul class="breadcrumb">
                <li>Home</li>
                <li><a asp-area="" asp-controller="Blog" asp-action="Index"> Blog</a></li>
                <li><a asp-area="" asp-controller="Post" asp-action="Index" asp-route-postId="@Model.PostId"> Post</a></li>
                <li>
                    Edit Comment
                </li>
            </ul>
        </div>
    </div>
</div>

<div class=" container">
    <div class="comments-form">
        <form asp-area=""
              asp-controller="Comment"
              asp-action="EditComment"
              asp-route-commentId="@Model.Id"
              asp-route-postId="@Model.PostId"
              method="post">
            <input type="hidden" asp-for="@Model.PostId" />
            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.ParentCommentId" />
            <div class="row">
                <h3>Edit a comment</h3>
            </div>
            <div class="form-group">
                <label for="Content"></label>
                <textarea name="Content" id="Content" class="form-control edit-with-tinymce">@Model.Content</textarea>
            </div>
            <div>
                <br>
                <input type="submit" class="btn btn-primary" value="Edit comment" />
            </div>
        </form>
    </div>
</div>
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/visualizer.js" type="text/javascript"></script>
}