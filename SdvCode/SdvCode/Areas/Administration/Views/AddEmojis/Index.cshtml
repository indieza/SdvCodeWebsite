@{
    ViewData["Title"] = "Emojis addons";
}

@model AddEmojisInputModel

<partial name="_TempDataPartial" />

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Emojis Addons - Add new emojis</h1>
    </div>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">Add new emojis</h1>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="row" method="post" enctype="multipart/form-data">
            <div class="col-xl-12 col-md-12 mb-4">
                <label asp-for="@this.Model.EmojiType"></label>
                <select class="form-control" asp-for="@this.Model.EmojiType" asp-items="Html.GetEnumSelectList<EmojiType>()">
                    <option disabled selected>Select emoji type...</option>
                </select>
                <span class="text-danger" asp-validation-for="@this.Model.EmojiType"></span>
            </div>
            <div class="col-xl-12 col-md-12 mb-4">
                <input asp-for="@this.Model.Images" type="file" multiple />
                <span class="text-danger" asp-validation-for="@this.Model.Images"></span>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <button asp-area="Administration" asp-controller="AddEmojis" asp-action="AddNewEmojis" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text">Add Emojis</span>
                </button>
            </div>
        </div>
    </form>
    <hr />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}