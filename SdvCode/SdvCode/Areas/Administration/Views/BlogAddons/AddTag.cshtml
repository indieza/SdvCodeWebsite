@using SdvCode.Areas.Administration.ViewModels.BlogAddonsViewModels
@{
    ViewData["Title"] = "Blog addons";
}

@model AddRemoveTagBaseModel

<partial name="_TempDataPartial" />

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Blog Addons - Add new tag</h1>
    </div>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">Add new tag</h1>
    </div>
    <form method="post">
        <div class="row">
            <div class="col-xl-6 col-md-9 mb-4">
                <label asp-for="@Model.AddRemoveTagInputModel.Name"></label>
                <input asp-for="@Model.AddRemoveTagInputModel.Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="@Model.AddRemoveTagInputModel.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-4 col-md-6 mb-4">
                <button asp-area="Administration" asp-controller="BlogAddons" asp-action="AddNewTag" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text">Add Tag</span>
                </button>
            </div>
        </div>
    </form>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">Remove existing tag</h1>
    </div>
    <form method="post">
        <div class="row">
            <div class="col-xl-6 col-md-9 mb-4">
                <label asp-for="@Model.AddRemoveTagInputModel.Name"></label>
                <select class="form-control" asp-for="@Model.AddRemoveTagInputModel.Name" asp-items="@(new SelectList(Model.TagsNames))">
                    <option value="" selected disabled>Select Tag Name</option>
                </select>
                <span asp-validation-for="@Model.AddRemoveTagInputModel.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-4 col-md-6 mb-4">
                <button asp-area="Administration" asp-controller="BlogAddons" asp-action="RemoveTag" class="btn btn-danger btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text">Remove Tag</span>
                </button>
            </div>
        </div>
    </form>
    <hr />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}