@using SdvCode.Areas.SdvShop.ViewModels.Product.InputModels
@{
    ViewData["Title"] = "Edit Product";
}

@model EditProductIndexModel

<partial name="_TempDataPartial" />

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Shop Center - Edit product</h1>
    </div>
    <hr />

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800">Edit product - please select product name and edit it</h1>
    </div>
    <div class="row">
        <div class="col-xl-12 col-md-12 mb-4">
            <select class="form-control" onchange="selectedName(this)">
                <option value="" disabled selected>Select Product...</option>
                @foreach (var name in Model.AllProductsNames)
                {
                    <option value=@name>@name</option>
                }
            </select>
        </div>
    </div>
    <hr />

    <form method="post" enctype="multipart/form-data" id="contentForm" style="display: none">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-xl-12 col-md-12 mb-4">
                <label asp-for="@Model.InputModel.Name"></label>
                <input asp-for="@Model.InputModel.Name" class="form-control" placeholder="Name" id="productName" required />
                <span asp-validation-for="@Model.InputModel.Name" class="text-danger"></span>
            </div>
            <div class="col-xl-12 col-md-12 mb-4">
                <label asp-for="@Model.InputModel.ProductCategory"></label>
                <select class="form-control" asp-for="@Model.InputModel.ProductCategory" id="productCategory">
                    <option value="">Select Category...</option>
                    @foreach (var category in Model.ProductCategories)
                    {
                        <option value=@category>@category</option>
                    }
                </select>
                <span asp-validation-for="@Model.InputModel.ProductCategory" class="text-danger"></span>
            </div>
            <div class="col-xl-12 col-md-12 mb-4">
                <label asp-for="@Model.InputModel.Price"></label>
                <input asp-for="@Model.InputModel.Price" class="form-control" placeholder="Price" type="number" id="productPrice" required />
                <span asp-validation-for="@Model.InputModel.Price" class="text-danger"></span>
            </div>
            <div class="col-xl-12 col-md-12 mb-4">
                <label asp-for="@Model.InputModel.Description"></label>
                <textarea asp-for="@Model.InputModel.Description" class="form-control edit-with-tinymce" id="productDescription"></textarea>
                <span asp-validation-for="@Model.InputModel.Description" class="text-danger"></span>
            </div>
            <div class="col-xl-12 col-md-12 mb-4">
                <input asp-for="@Model.InputModel.ProductImages" type="file" multiple>
            </div>
            <input asp-for="@Model.InputModel.Id" id="productId" type="hidden" />
            <div class="col-xl-3 col-md-6 mb-4">
                <button asp-area="Administration" asp-controller="Shop" asp-action="EditProduct" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text">Edit Product</span>
                </button>
            </div>
        </div>
    </form>
    <hr />
    <input type="hidden" />
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/visualizer.js" type="text/javascript"></script>
    <script src="~/administration/js/editProduct.js"></script>
}